{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"target": "ESNext",
		"module": "Node16",
		"moduleResolution": "Node16",
		"noEmitHelpers": true,
		"importHelpers": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"importsNotUsedAsValues": "error",
		"noImplicitOverride": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"paths": {
			"#internals/*": ["./src/internals/*.ts"]
		}
	},
	"include": ["src", "src/**/*.d.ts"]
}
